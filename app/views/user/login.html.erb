  }
  .inner-container h2{
      text-align: center;
  }
  .label1{
      margin-right: 20px;
  }
  .label2{
      margin-right: 23px;
  }
  .username{
      padding: 7px;
  }

  .password{
      padding: 7px;
  }
.submit{
    padding-right: 15px;
