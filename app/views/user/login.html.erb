<%= form_with url: 'login', method: 'post' do |form| %>
  <div >
    <div class="inner-container">
  <h2>Login</h2>
  <%= form.label :username, class: 'label1' %>
  <%= form.text_field :username, class:'username'%><br><br>
  <%= form.label :password,class: 'label2'  %>
  <%= form.password_field :password, class:'password' %><br><br>
  <%= form.submit "Login", class:'submit' %></div>
<% end %></div>
